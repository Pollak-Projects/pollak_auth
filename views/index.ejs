<!DOCTYPE html>
<html lang="hu" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    />
    <title>Login</title>
  </head>
  <body class="text-light">
    <div
      class="container d-flex justify-content-center align-items-center min-vh-100"
    >
      <div class="card p-4 shadow-lg" style="width: 350px">
        <h3 class="text-center mb-4">Bejelentkezés</h3>
        <div class="mb-3">
          <label for="username" class="form-label">Felhasználónév</label>
          <input type="text" id="username" class="form-control" />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Jelszó</label>
          <input type="password" id="password" class="form-control" />
          <a class="elfjel" href="/forgotpassword">Elfelejtettem a jelszót</a>
        </div>
        <div class="d-flex justify-content-center">
          <button class="btn btn-primary w-100" onclick="Login()">Bejelentkezés</button>
        </div>
      </div>
    </div>

    <style>
      .elfjel {
        float: right;
      }

      body {
        background-color: rgba(28, 28, 28);
      }
      .card {
        background-color: #1f1f1f;
        border-radius: 10px;
      }
      .form-control {
        background-color: #2a2a2a;
        color: white;
        border: 1px solid #444;
      }
      .form-control:focus {
        background-color: #2a2a2a;
        border-color: #6c757d;
        box-shadow: 0 0 0 0.25rem rgba(108, 117, 125, 0.25);
      }
      .btn-primary {
        background-color: #007bff;
        border: none;
      }
      .btn-primary:hover {
        background-color: #0056b3;
      }
    </style>

    <script>
      const username = document.getElementById("username");
      const password = document.getElementById("password");

      function Login() {
        fetch(`/user/login`, {
          headers: {
            "Content-Type": "application/json",
          },
          method: "POST",
          body: JSON.stringify({
            username: username.value,
            password: password.value,
          }),
        }).then((res) => {
          if (res.ok) {
            console.log("Successfully logged in");
            location.replace("/table");
          } else {
            alert("Nem tudsz bejelentkezni, nem megfelelő adatok.");
          }
        });
      }
    </script>
  </body>
</html>
